<Window x:Class="AI.SmartCut.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AI SmartCut — ash.as" Width="1080" Height="680"
        Background="#11161D" WindowStartupLocation="CenterScreen">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Header -->
    <Border Background="#151B24" Padding="16" Margin="20,20,20,10" CornerRadius="10">
      <DockPanel>
        <TextBlock Text="AI SmartCut" Foreground="White" FontSize="18" FontWeight="SemiBold" />
        <TextBlock Text="  •  ash.as" Foreground="#9EDCFF" FontSize="14" Margin="8,0,0,0"/>
      </DockPanel>
    </Border>

    <!-- Body -->
    <Border Grid.Row="1" Background="#151B24" CornerRadius="16" Margin="20,0,20,20" Padding="24">
      <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0">
          
          <!-- Action Button -->
          <Button x:Name="BtnRemoveBg"
                  Content="Remove Background"
                  Width="340" Height="58"
                  Click="RemoveBackground_Click"
                  Background="#1FA2FF" Foreground="White"
                  FontWeight="SemiBold" BorderThickness="0" Margin="0,0,0,12" />

          <!-- Free uses / status -->
          <TextBlock x:Name="TxtStatus"
                     Text="Ready"
                     Foreground="#9EDCFF" HorizontalAlignment="Center" Margin="0,0,0,18"/>

          <!-- Feature chips -->
          <WrapPanel HorizontalAlignment="Center">
            <Border Background="#232A33" CornerRadius="10" Padding="12" Margin="8">
              <TextBlock Foreground="#1FA2FF" Text="Manual Edit"/>
            </Border>
            <Border Background="#232A33" CornerRadius="10" Padding="12" Margin="8">
              <TextBlock Foreground="#1FA2FF" Text="Effects"/>
            </Border>
            <Border Background="#232A33" CornerRadius="10" Padding="12" Margin="8">
              <TextBlock Foreground="#1FA2FF" Text="Batch Remove"/>
            </Border>
          </WrapPanel>

          <!-- Preview area -->
          <Grid Margin="0,24,0,0">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="24"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Background="#0E141B" BorderBrush="#232A33" BorderThickness="1" CornerRadius="12" Padding="12">
              <StackPanel>
                <TextBlock Text="Original" Foreground="#9EDCFF" Margin="0,0,0,8"/>
                <Image x:Name="ImgOriginal" Stretch="Uniform" Height="260"/>
              </StackPanel>
            </Border>

            <Border Grid.Column="2" Background="#0E141B" BorderBrush="#232A33" BorderThickness="1" CornerRadius="12" Padding="12">
              <StackPanel>
                <TextBlock Text="Cut-out" Foreground="#9EDCFF" Margin="0,0,0,8"/>
                <Image x:Name="ImgCutout" Stretch="Uniform" Height="260"/>
              </StackPanel>
            </Border>
          </Grid>

        </StackPanel>
      </ScrollViewer>
    </Border>
  </Grid>
</Window>
