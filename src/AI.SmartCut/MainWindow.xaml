<Window
  x:Class="AI.SmartCut.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="AI SmartCut" Height="720" Width="1200" Background="#11161D"
  WindowStartupLocation="CenterScreen">
  
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Top Bar -->
    <DockPanel Background="#151B24" Margin="16" LastChildFill="True">
      <!-- Scissors vector icon (no external image needed) -->
      <Grid Width="26" Height="26" Margin="10,6,8,6">
        <Ellipse Width="10" Height="10" Stroke="#1FA2FF" StrokeThickness="2" Fill="Transparent" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Ellipse Width="10" Height="10" Stroke="#1FA2FF" StrokeThickness="2" Fill="Transparent" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        <Rectangle Width="2" Height="26" Fill="#1FA2FF" RenderTransformOrigin="0.5,0.5">
          <Rectangle.RenderTransform>
            <RotateTransform Angle="45"/>
          </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle Width="2" Height="26" Fill="#1FA2FF" RenderTransformOrigin="0.5,0.5">
          <Rectangle.RenderTransform>
            <RotateTransform Angle="-45"/>
          </Rectangle.RenderTransform>
        </Rectangle>
      </Grid>

      <TextBlock Text="AI SmartCut" Foreground="White" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
      <TextBlock Text=" â€” ash.as" Foreground="#7EA0B8" FontSize="14" VerticalAlignment="Center" Margin="6,0,0,0"/>
    </DockPanel>

    <!-- Body -->
    <Grid Grid.Row="1" Margin="16">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>

      <!-- Input Preview -->
      <Border Background="#151B24" CornerRadius="12" Padding="12" Margin="0,0,8,0">
        <Grid>
          <TextBlock Text="Original" Foreground="#9EDCFF" FontWeight="SemiBold" Margin="4,0,0,8" />
          <Image x:Name="ImgOriginal" Stretch="Uniform" Margin="0,24,0,0"/>
        </Grid>
      </Border>

      <GridSplitter Grid.Column="1" Width="10" Background="#0E141C" HorizontalAlignment="Center"/>

      <!-- Output Preview -->
      <Border Grid.Column="2" Background="#151B24" CornerRadius="12" Padding="12" Margin="8,0,0,0">
        <Grid>
          <TextBlock Text="Result (Transparent PNG)" Foreground="#9EDCFF" FontWeight="SemiBold" Margin="4,0,0,8"/>
          <Image x:Name="ImgResult" Stretch="Uniform" Margin="0,24,0,0"/>
        </Grid>
      </Border>
    </Grid>

    <!-- Bottom Bar -->
    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="16" >
      <Button x:Name="BtnOpen" Content="Open Image" Width="160" Height="44" Margin="6" Click="BtnOpen_Click"/>
      <Button x:Name="BtnRemove" Content="Remove Background" Width="220" Height="44" Margin="6" Click="BtnRemove_Click" IsEnabled="False"/>
      <Button x:Name="BtnExport" Content="Export PNG" Width="160" Height="44" Margin="6" Click="BtnExport_Click" IsEnabled="False"/>
      <TextBlock x:Name="TxtInfo" Foreground="#7EA0B8" VerticalAlignment="Center" Margin="12,0,0,0"/>
    </StackPanel>
  </Grid>
</Window>
